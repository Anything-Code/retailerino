    "scripts": {
        "start": "node ./dist/server.js",
        "build": "yarn build:prod",
        "watch": "yarn build:dev --watch",
        "build:dev": "webpack --mode=development --progress",
        "build:prod": "webpack --mode=production --progress",
        "compile": "yarn compile-all",
        "compile-all": "yarn pkg ./dist/bundle.js --out-path bin",
        "compile-win": "yarn pkg ./dist/bundle.js --targets node14-win-x64 --out-path bin",
        "compile-lin": "yarn pkg ./dist/bundle.js --targets node14-linux-x64 --out-path bin",
        "compile-mac": "yarn pkg ./dist/bundle.js --targets node14-macos-x64 --out-path bin"
    },
    "dependencies": {
        "@prisma/client": "^2.23.0",
        "apollo-server": "^2.25.1",
        "graphql": "^15.5.0",
